<%layout("/layouts/boilerplate")%>
<body>
    <div class="row">
        <div class="col-8 offset-2">
            <h4><%=listings.title%></h4>
            <div class="card listing-card">
                <img src="<%=listings.image.url%>" class="card-img-top show-img" alt="listing image" style="height: 30rem;">
                <div class="card-body">
                    <p class="card-text"></p>
                </div>
            </div>
            <ul>
                <li>Owner: <%= listings.owner.username %></li> 
                <li><%=listings.title%></li>
                <li><%=listings.description%></li>
                <li>&#8377; <%=listings.price.toLocaleString("en-IN")%></li>
                <li><%=listings.location%></li>
                <li><%=listings.country%></li>
            </ul> 
            <br>
            <% if(currentUser && currentUser._id.equals(listings.owner._id)){ %>
                <a href="/listings/<%=listings._id%>/edit" class="btn btn-danger mb-2">Edit</a>
                <br>
                <form method="POST" action="/listings/<%=listings._id%>?_method=DELETE">
                    <button class="btn btn-dark">Delete</button>
                </form>
            <% } %>
            <hr> 
            <% if(currentUser){ %>
                <h4>Reviews</h4>
                <form action="/listings/<%=listings._id%>/reviews" method="POST" novalidate class="mb-3 needs-validation">
                    <label for="rating" class="form-label">Rating</label>
                    <fieldset class="starability-slot">
                        <input type="radio" id="no-rate" class="input-no-rate" name="review[rating]" value="1" checked aria-label="No rating." />
                        <input type="radio" id="first-rate1" name="review[rating]" value="1" />
                        <label for="first-rate1" title="Terrible">1 star</label>
                        <input type="radio" id="first-rate2" name="review[rating]" value="2" />
                        <label for="first-rate2" title="Not good">2 stars</label>
                        <input type="radio" id="first-rate3" name="review[rating]" value="3" />
                        <label for="first-rate3" title="Average">3 stars</label>
                        <input type="radio" id="first-rate4" name="review[rating]" value="4" />
                        <label for="first-rate4" title="Very good">4 stars</label>
                        <input type="radio" id="first-rate5" name="review[rating]" value="5" />
                        <label for="first-rate5" title="Amazing">5 stars</label>
                    </fieldset>
                    <div class="col-8">
                        <label for="comment" class="form-label">Comment</label>
                        <textarea name="review[comment]" id="comment" cols="30" rows="3" class="form-control" required></textarea>
                        <div class="invalid-feedback">Please enter a comment.</div>
                    </div>
                    <button class="btn btn-danger mt-2">Add Review</button>
                </form>
                <hr>
            <% } %>
            <% if(listings.reviews.length > 0){ %>
                <div class="row"> 
                    <h4>All Reviews</h4>
                    <%for(review of listings.reviews){ %>
                        <div class="card col-5 ms-3 mb-3">
                            <div class="card-body mt-2 mb-2">
                                <h5 class="card-title"><%=review.author.username%></h5>
                                <h5 class="card-title"><%=review.createdAt.toLocaleString("en-IN")%></h5>
                                <hr>
                                <p class="starability-result card-text" data-rating="<%=review.rating%>"></p>
                                <p class="card-text"><%=review.comment%></p>
                            </div>
                            <form method="POST" action="/listings/<%=listings._id%>/reviews/<%=review._id%>?_method=DELETE">
                                <button class="btn btn-danger mb-3">Delete</button>
                            </form>
                        </div>
                    <%}%>
                </div>
                <hr>
            <%}%>
        </div>
    </div>

    <div class="row">
        <div class="col-8 offset-2">
            <h3>Where you'll Be</h3>
            <div id="map" style="width: 100%; height: 400px; margin-bottom: 2rem;"></div>
        </div>
    </div>

    <link href="https://unpkg.com/@maptiler/sdk@latest/dist/maptiler-sdk.css" rel="stylesheet" />
    <script src="https://unpkg.com/@maptiler/sdk@latest/dist/maptiler-sdk.umd.min.js"></script>
    <script>
        let mapToken = "<%= mapToken %>";
        maptilersdk.config.apiKey = mapToken;
        
        const map = new maptilersdk.Map({
            container: 'map',
            style: maptilersdk.MapStyle.STREETS,
            center: [<%= listings.geometry.coordinates[0] %>, <%= listings.geometry.coordinates[1] %>],
            zoom: 12
        });
        const marker = new maptilersdk.Marker()
            .setLngLat([<%= listings.geometry.coordinates[0] %>, <%= listings.geometry.coordinates[1] %>])
            .addTo(map);
            
            const popup = new maptilersdk.Popup({ closeButton: true, closeOnClick: true})
            .setLngLat([<%= listings.geometry.coordinates[0] %>, <%= listings.geometry.coordinates[1] %>])
            .setHTML('<h6><%= listings.title %></h6><p>&#8377; <%= listings.price.toLocaleString("en-IN") %></p>')
            .addTo(map);
    </script>
    <script>
      window.onload = function() {
        window.scrollTo(0, 0);
      };
    </script>
</body>
